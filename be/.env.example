NODE_ENV=development
PORT=4000

# Database
DB_HOST=localhost
DB_PORT=3306
DB_USER=dbusernamehere
DB_PASS=dbusernamepasshere
DB_NAME=dbnamehere

# JWT Secrets (separate for each role)
JWT_CUSTOMER_SECRET=customer_super_secret_key_change_in_production
JWT_DELIVERY_SECRET=delivery_super_secret_key_change_in_production
JWT_ADMIN_SECRET=admin_super_secret_key_change_in_production
JWT_EXPIRY=365d

# AWS S3
AWS_REGION=ap-south-1
AWS_S3_BUCKET=watch-store-media
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# Google Maps
GOOGLE_MAPS_API_KEY=your_google_maps_api_key


# Twilio Configuration
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# SMS Provider
SMS_PROVIDER=dev
SMS_API_KEY=
SMS_API_SECRET=
SMS_FROM_NUMBER=

# Feature Flags
NOTIFICATIONS_ENABLED=false

# File Limits
MAX_MEDIA_BYTES=104857600
MAX_VIDEO_DURATION_SECONDS=60
MAX_VOICE_DURATION_SECONDS=600

# OTP
OTP_TTL_MINUTES=10
OTP_LENGTH=6
OTP_MAX_ATTEMPTS_PER_HOUR=5

# LocalStack S3
AWS_ENDPOINT=http://localhost:4566
AWS_S3_BUCKET=watch-store-media-local
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_REGION=us-east-1
